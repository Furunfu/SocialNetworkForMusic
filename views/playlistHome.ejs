<%- include('partials/head.ejs') %>

    <body>

        <%- include('partials/menu.ejs') %>
            <% for(let i=0; i < userPlaylists.length; i++) { %>
                <div class="card playlist">
                    <a href="/playlist/<%= userPlaylists[i]._id %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= userPlaylists[i].title %>
                            </h5>
                            <p class="card-text">
                                <%= userPlaylists[i].songs.length %> Songs
                            </p>
                        </div>
                    </a>
                </div>
                <% } %>
                    <div class="container d-flex justify-content-center align-items-center flex-column my-5">
                        <div class="container my-5">
                            <% if(userPlaylists.length===0) { %>
                                <p>There are no playlists yet, create one!</p>
                            <% } %>
                                    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal"
                                        data-bs-target="#myModal">
                                        Create playlist
                                    </button>
                        </div>
                        <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Insert title and description</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="mb-3">
                                                <label for="title" class="col-form-label">Title:</label>
                                                <input type="text" class="form-control" id="title">
                                            </div>
                                            <div class="mb-3">
                                                <label for="description" class="col-form-label">Description:</label>
                                                <textarea class="form-control" id="description"></textarea>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                                            id="createPlaylistBtn">Create</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script src="js/createPlaylistModal.js"></script>

    </body>

    </html>